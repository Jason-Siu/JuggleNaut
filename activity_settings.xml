<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.something.myapplication.SettingsActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textLabelSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textAlignment="center"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBoxMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disable Music"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/checkBoxSFX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disable Sound Effects"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textLabelMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Music"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textMenuMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Play Menu Screen Music"
                android:textAlignment="viewStart"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonMenuMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play" />

            <TextView
                android:id="@+id/textGameMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Play In Game Music"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonGameMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play" />

            <TextView
                android:id="@+id/textOverMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Play Game Over Music"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonOverMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play" />

            <TextView
                android:id="@+id/textWallSFX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Play Wall Bounce SFX"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonWallSFX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play" />

            <TextView
                android:id="@+id/textBallSFX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Play Click Ball SFX"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonBallSFX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play" />

            <TextView
                android:id="@+id/textMisclick1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Play Misclick SFX #1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonMisclick1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play" />

            <TextView
                android:id="@+id/textMisclick2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Play Misclick SFX #2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonMisclick2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play" />

            <TextView
                android:id="@+id/textEMPTY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonToMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back to Main Menu" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
